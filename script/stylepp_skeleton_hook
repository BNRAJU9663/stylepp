DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PATH=$PATH:$DIR/../bin:$DIR

TOP=`git rev-parse --show-toplevel`

for CUP in $*; do
  for I in `git diff --name-only`; do
    I=$TOP/$I
    if [ ${I: -2} == ".c" ] || [ ${I: -2} == ".h" ]; then
      if $CUP $I <$I > /tmp/fmt; then
        mv /tmp/fmt $I
      fi
    fi
  done
done

